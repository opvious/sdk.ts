{
  "name": "@opvious/sdk-ts-packages",
  "version": "0.2.3",
  "private": true,
  "repository": "github:opvious/sdk.ts",
  "author": "Opvious Engineering <oss@opvious.io>",
  "license": "Apache-2.0",
  "scripts": {
    "bump": "pnpm exec opvious-manage-versions update -b ${BUMP:-patch}",
    "clean": "pnpm -r -F !. run clean && rm -rf docs node_modules out",
    "docs": "pnpm exec typedoc",
    "fix": "prettier --write 'packages/*/{src,test}/**/*.{ts,tsx}' && pnpm run lint --fix",
    "lint": "eslint 'packages/*/{src,test}/**/*.{ts,tsx}'",
    "test": "pnpm -r run test --coverage"
  },
  "devDependencies": {
    "@opvious/eslint-plugin": "^0.1.20",
    "@opvious/prettier-typescript": "^0.1.20",
    "@opvious/stl": "^0.14.1",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "prettier": "^2.6.1",
    "typedoc": "^0.23.17",
    "typedoc-plugin-resolve-crossmodule-references": "^0.3.2",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": "@opvious/prettier-typescript"
}
