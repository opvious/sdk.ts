{
  "name": "@opvious/sdk-ts-packages",
  "version": "0.4.0",
  "private": true,
  "repository": "github:opvious/sdk.ts",
  "author": "Opvious Engineering <oss@opvious.io>",
  "license": "Apache-2.0",
  "scripts": {
    "bump": "pnpm -r --include-workspace-root exec npm version ${BUMP:-patch}",
    "clean": "pnpm -r -F !. run clean && rm -rf docs node_modules out",
    "docs": "pnpm exec typedoc",
    "fix": "prettier --write 'packages/*/{src,test}/**/*.{ts,tsx}' && pnpm run lint --fix",
    "lint": "eslint 'packages/*/{src,test}/**/*.{ts,tsx}'",
    "test": "pnpm -r run test --coverage"
  },
  "devDependencies": {
    "@opentelemetry/api": "~1.3.0",
    "@opvious/eslint-plugin": "^0.1.22",
    "@opvious/prettier-typescript": "^0.1.22",
    "@opvious/tsconfig": "^0.1.22",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.7",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "jest": "^29.3.1",
    "jest-extended": "^3.1.0",
    "lint-staged": "^12.1.4",
    "prettier": "^2.6.1",
    "ts-essentials": "^9.3.0",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.17",
    "typedoc-plugin-resolve-crossmodule-references": "^0.3.2",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": "@opvious/prettier-typescript",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/node",
        "typescript"
      ]
    }
  }
}
