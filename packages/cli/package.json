{
  "name": "opvious-cli",
  "version": "0.4.0",
  "repository": "github:opvious/sdk.ts",
  "description": "Opvious CLI",
  "homepage": "https://www.opvious.io/sdk.ts/modules/opvious_cli.html",
  "keywords": [
    "cli",
    "opvious"
  ],
  "author": "Opvious Engineering <oss@opvious.io>",
  "license": "Apache-2.0",
  "bin": {
    "opvious": "./bin/opvious"
  },
  "main": "./lib",
  "files": [
    "bin/",
    "lib/"
  ],
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out",
    "fix": "prettier --write",
    "prepare": "pnpm run build",
    "test": "jest",
    "watch": "tsc -b -w src"
  },
  "dependencies": {
    "@babel/code-frame": "^7.18.6",
    "@opentelemetry/api": "~1.3.0",
    "@opvious/stl-bootstrap": "^0.16.4",
    "@opvious/stl-errors": "^0.16.4",
    "@opvious/stl-telemetry": "^0.16.4",
    "@opvious/stl-utils": "^0.16.4",
    "ajv": "^8.11.0",
    "chokidar": "^3.5.3",
    "commander": "^9.1.0",
    "debounce": "^1.2.1",
    "easy-table": "^1.2.0",
    "fast-fifo": "^1.1.0",
    "humanize-duration": "^3.27.3",
    "js-yaml": "^4.1.0",
    "luxon": "^3.0.4",
    "opvious": "workspace:*",
    "opvious-sheets": "workspace:*",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.3",
    "@types/debounce": "^1.2.1",
    "@types/fast-fifo": "^1.0.0",
    "@types/humanize-duration": "^3.27.1",
    "@types/js-yaml": "^4.0.5",
    "@types/luxon": "^3.0.2"
  },
  "jest": {
    "coverageDirectory": "../../out/coverage/cli",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      ".d.ts",
      ".js"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "babelConfig": {
            "compact": false
          },
          "tsconfig": "test/tsconfig.json"
        }
      ]
    }
  },
  "typedoc": {
    "entryPoint": "src/index.ts"
  }
}
