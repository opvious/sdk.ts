{
  "name": "opvious-cli",
  "version": "0.1.42",
  "repository": "github:opvious/sdk.ts",
  "description": "Opvious CLI",
  "homepage": "https://www.opvious.io/sdk.ts/modules/opvious_cli.html",
  "keywords": [
    "cli",
    "opvious"
  ],
  "author": "Opvious Engineering <oss@opvious.io>",
  "license": "Apache-2.0",
  "bin": {
    "opvious": "./bin/opvious"
  },
  "main": "./lib",
  "files": [
    "bin/",
    "lib/"
  ],
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out",
    "prepare": "pnpm run build",
    "test": "jest",
    "watch": "tsc -b -w src"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "commander": "^9.1.0",
    "easy-table": "^1.2.0",
    "humanize-duration": "^3.27.3",
    "js-yaml": "^4.1.0",
    "luxon": "^3.0.4",
    "opvious": "workspace:*",
    "opvious-sheets": "workspace:*",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/humanize-duration": "^3.27.1",
    "@types/jest": "^27.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/luxon": "^3.0.2",
    "@types/node": "^18.11.7",
    "jest": "^27.4.5",
    "jest-extended": "^1.1.0",
    "ts-essentials": "^9.3.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.8.4"
  },
  "jest": {
    "coverageDirectory": "../../out/coverage/cli",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "test/tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      ".d.ts",
      ".js"
    ],
    "transform": {}
  },
  "typedoc": {
    "entryPoint": "src/index.ts"
  }
}
