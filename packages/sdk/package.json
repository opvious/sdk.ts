{
  "name": "opvious",
  "version": "0.1.22",
  "repository": "github:opvious/sdk.ts",
  "description": "Opvious SDK",
  "homepage": "https://www.opvious.io",
  "keywords": [
    "opvious",
    "sdk"
  ],
  "author": "Opvious <oss@opvious.io>",
  "license": "Apache-2.0",
  "main": "lib/",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out",
    "prepare": "pnpm run build",
    "test": "jest",
    "watch": "tsc -b -w src"
  },
  "dependencies": {
    "graphql": "^16.6.0",
    "graphql-request": "^5.0.0",
    "opvious-graph": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.7",
    "@types/node-fetch": "^2.6.2",
    "jest": "^27.4.5",
    "jest-extended": "^1.1.0",
    "node-fetch": "^2.6.7",
    "ts-jest": "^27.1.2",
    "typescript": "^4.1.5"
  },
  "jest": {
    "coverageDirectory": "../../out/coverage/sdk",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "test/tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      ".d.ts",
      ".js"
    ],
    "transform": {}
  },
  "typedocMain": "src/index.ts"
}
